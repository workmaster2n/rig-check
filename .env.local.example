# Set to true to use Firebase emulators instead of a real project (recommended for local dev)
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true

# IMPORTANT: When using emulators, NEXT_PUBLIC_FIREBASE_PROJECT_ID must match the project ID
# passed to `firebase emulators:start --project <id>`. If they don't match, the app writes
# data to a different namespace than the emulator UI displays and nothing will appear.
#
# Example: start emulators with `firebase emulators:start --project demo-rig-check`
# and set NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-rig-check below.
#
# Replace all values with real staging project values if not using emulators.
NEXT_PUBLIC_FIREBASE_API_KEY=demo-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=demo-rig-check.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-rig-check
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=1:000000000000:web:demo

# Mailgun (shared across environments)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
