# Set to true to use Firebase emulators instead of a real project (recommended for local dev)
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true

# Placeholder values when using emulators (emulators don't validate these)
# Replace with real staging project values if not using emulators
NEXT_PUBLIC_FIREBASE_API_KEY=demo-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-project
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=1:000000000000:web:demo

# Mailgun (shared across environments)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
